          },
          "MOTIVO GIURIDICO DELLA RISCOSSIONE": {
            "type": "string"
          },
          "DESCRIZIONE TIPO SERVIZIO": {
            "type": "string"
          },
          "VERSIONE TASSONOMIA": {
            "type": "string"
          },
          "DATI SPECIFICI INCASSO": {
            "type": "string"
          },
          "DATA INIZIO VALIDITA": {
            "type": "string"
          },
          "DATA FINE VALIDITA": {
            "type": "string"
          }
        }
      }
    }
  }
}
