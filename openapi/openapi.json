                    }
                }
            },
            "TaxonomyObjectStandard": {
                "type": "object",
                "properties": {
                    "CODICE TIPO ENTE CREDITORE": {
                        "type": "string"
                    },
                    "CODICE TIPOLOGIA SERVIZIO": {
                        "type": "string"
                    },
                    "DATA FINE VALIDITA": {
                        "type": "string"
                    },
                    "DATA INIZIO VALIDITA": {
                        "type": "string"
                    },
                    "DATI SPECIFICI INCASSO": {
