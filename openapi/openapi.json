                    },
                    "DESCRIZIONE MACRO AREA": {
                        "type": "string"
                    },
                    "DESCRIZIONE TIPO SERVIZIO": {
                        "type": "string"
                    },
                    "FLAG NUOVA COMBINAZIONE": {
                        "type": "string"
                    },
                    "MOTIVO GIURIDICO DELLA RISCOSSIONE": {
                        "type": "string"
                    },
                    "NOME MACRO AREA": {
